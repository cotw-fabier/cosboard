{
  "name": "QWERTY with Numpad",
  "description": "Extended QWERTY layout with numpad panel (demonstrates inheritance)",
  "author": "Cosboard Team",
  "language": "en",
  "locale": "en_US",
  "version": "1.0",
  "inherits": "resources/layouts/example_qwerty_base.json",
  "default_panel_id": "main",
  "panels": {
    "main": {
      "id": "main",
      "rows": [
        {
          "cells": [
            {
              "type": "key",
              "label": "Q",
              "code": "q",
              "identifier": "key_q",
              "width": 1.0,
              "height": 1.0,
              "alternatives": {
                "Shift": "Q",
                "Up": "1"
              }
            },
            {
              "type": "key",
              "label": "W",
              "code": "w",
              "identifier": "key_w",
              "width": 1.0,
              "height": 1.0,
              "alternatives": {
                "Shift": "W",
                "Up": "2"
              }
            },
            {
              "type": "key",
              "label": "E",
              "code": "e",
              "identifier": "key_e",
              "width": 1.0,
              "height": 1.0,
              "alternatives": {
                "Shift": "E",
                "Up": "3"
              }
            }
          ]
        }
      ]
    },
    "numpad": {
      "id": "numpad",
      "padding": 8.0,
      "margin": 4.0,
      "rows": [
        {
          "cells": [
            {
              "type": "key",
              "label": "7",
              "code": "7",
              "identifier": "num_7",
              "width": 1.0,
              "height": 1.0
            },
            {
              "type": "key",
              "label": "8",
              "code": "8",
              "identifier": "num_8",
              "width": 1.0,
              "height": 1.0
            },
            {
              "type": "key",
              "label": "9",
              "code": "9",
              "identifier": "num_9",
              "width": 1.0,
              "height": 1.0
            }
          ]
        },
        {
          "cells": [
            {
              "type": "key",
              "label": "4",
              "code": "4",
              "identifier": "num_4",
              "width": 1.0,
              "height": 1.0
            },
            {
              "type": "key",
              "label": "5",
              "code": "5",
              "identifier": "num_5",
              "width": 1.0,
              "height": 1.0
            },
            {
              "type": "key",
              "label": "6",
              "code": "6",
              "identifier": "num_6",
              "width": 1.0,
              "height": 1.0
            }
          ]
        },
        {
          "cells": [
            {
              "type": "key",
              "label": "1",
              "code": "1",
              "identifier": "num_1",
              "width": 1.0,
